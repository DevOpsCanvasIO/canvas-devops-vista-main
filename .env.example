# DevOpsCanvas Dashboard Environment Variables
# Copy this file to .env.local and update the values

# ==============================================
# API Configuration
# ==============================================
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_ENV=development

# ==============================================
# Authentication (if implemented)
# ==============================================
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-secret-key
# AUTH_PROVIDER_CLIENT_ID=your-client-id
# AUTH_PROVIDER_CLIENT_SECRET=your-client-secret

# ==============================================
# Database (if implemented)
# ==============================================
# DATABASE_URL=postgresql://username:password@localhost:5432/devops_dashboard
# REDIS_URL=redis://localhost:6379

# ==============================================
# Analytics & Monitoring
# ==============================================
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io

# ==============================================
# Feature Flags
# ==============================================
# NEXT_PUBLIC_ENABLE_CHARTS=true
# NEXT_PUBLIC_ENABLE_REALTIME=true
# NEXT_PUBLIC_DEBUG_MODE=false

# ==============================================
# External Services
# ==============================================
# WEBHOOK_SECRET=your-webhook-secret
# NOTIFICATION_SERVICE_URL=http://localhost:3002

# ==============================================
# Development Settings
# ==============================================
# NODE_ENV=development
# LOG_LEVEL=debug
